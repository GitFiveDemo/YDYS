<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    tools:context=".view.activity.SerchMovieActivity">
    <RelativeLayout
        android:background="#568ded"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/search"
            android:hint="请输入你喜欢的电影"
            android:layout_toLeftOf="@+id/qx"
            android:layout_centerInParent="true"
            android:id="@+id/serch_movies"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:background="@drawable/editsharp"
            android:layout_width="250dp"
            android:layout_height="38dp"  />
        <TextView
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:id="@+id/qx"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:text="搜索记录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/clear"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/search_clear"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jilu"></ListView>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:text="热门推荐"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:padding="15dp"
            android:id="@+id/a"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="70dp"
            android:id="@+id/e"
            android:layout_below="@+id/a"
            android:text="sasadadadada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/b"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/a"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/e"
            android:layout_below="@+id/b"
            android:text="sasadadadada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>