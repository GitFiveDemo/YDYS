<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_blue"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MessageMovieActivity">
    <RelativeLayout
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/back_mess"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/name"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="猩球崛起"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/soucang"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/collection"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <com.dl7.player.media.IjkPlayerView
        android:id="@+id/player_view"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <android.support.design.widget.TabLayout
        app:tabTextColor="#ffff"
        app:tabSelectedTextColor="#18c153"
        app:tabIndicatorColor="#18c153"
        android:id="@+id/tablayout"
        android:background="#014b70"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/tuijian_viewpager"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        />


</LinearLayout>